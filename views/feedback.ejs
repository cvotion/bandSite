<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %> 
</head>
<body>
    <%- include('partials/nav.ejs') %> 
    <div class="b-container">
        <div class="row feedback-top">
            <img class="bandImg col-6" src="/images/band_img_1.jpeg" alt="">
            <h2 class="col-5">FEEDBACK</h2>
        </div>
        <div class="feedback-container">
            <div class="row">
                <div class="col-5">
                    <h2 class="feedback-form-title">Send us feedback</h2>
                    <form class="feedback-form">
                        <div class="form-group">
                            <label for="feedback-form-name">Name</label>
                            <input type="text" class="form-control" id="feedback-form-name" placeholder="Enter your name" name="name">
                        </div>
                        <!-- <div class="form-group">
                            <label for="feedback-form-title">Title</label>
                            <input type="text" class="form-control" id="feedback-form-title"
                                placeholder="Title of your feedback" name="title">
                        </div> -->
                        <div class="form-group">
                            <label for="feedback-form-message">Message</label>
                            <textarea type="text" placeholder="Enter your message, then hit the submit" class="form-control"
                                id="feedback-form-message" rows="6" name="message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default pull-right pink">Submit</button>
                    </form>
                </div><!-- primary -->
                <aside class="col-6 offset-1">
                    <div class="main-container">
                        <div class="maincontent feedback">
                            <h2 class="article-title">Recent Feedback</h2>
                            <div class="feedback-messages">
                            </div>
                        </div>
                    </div>
                </aside><!-- secondary -->
            </div>
        </div><!-- container -->
    </div>

    <%- include('partials/footer.ejs') %> 
</body>
</html>